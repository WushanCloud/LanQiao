int main()
{
	int x;
	cin >> x;
	float f; float m;
	cin >> f >> m;
	cout << fixed << setprecision(3);
	if (x == 1)
	{
		cout << (f + m) / 2 * 1.08;
	}
	else
	{
		cout << (f * 0.923 + m) / 2;
